{
	"name": "@potluri/blog-theme",
	"description": "Vikas' Blog Theme",
	"version": "1.0.0",
	"engines": {
		"ghost": ">=3.0.0",
		"ghost-api": "v3"
	},
	"scripts": {
		"dev": "gulp",
		"zip": "gulp zip",
		"test": "gscan .",
		"test:ci": "gscan --fatal --verbose ."
	},
	"author": {
		"name": "Vikas Potluri",
		"email": "me@vikaspotluri.me",
		"url": "https://vikaspotluri.me"
	},
	"devDependencies": {
		"beeper": "^2.0.0",
		"gulp": "4.0.2",
		"gulp-livereload": "4.0.2",
		"gulp-sourcemaps": "2.6.5",
		"gulp-watch": "5.0.1"
	},
	"config": {
		"posts_per_page": 15,
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1200
			},
			"xl": {
				"width": 2000
			}
		}
	}
}
